#!/bin/bash

# Update package list and install Nginx
sudo apt-get update -y
sudo apt-get install nginx -y

# Create a custom 404 error page
echo "Ceci n'est pas une page" > /var/www/html/404.html

# Update the Nginx configuration to use the custom 404 page
sed -i '/server {/a \\terror_page 404 /404.html;' /etc/nginx/sites-available/default

# Reload Nginx configuration without using systemctl
nginx -s reload

# Verify if the custom 404 page is configured
curl -sI localhost/nonexistentpage
curl localhost/nonexistentpage

